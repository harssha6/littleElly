import gift from "../../image/decorations/gifs/gift.gif"
import clouds from "../../image/decorations/gifs/clouds.gif"
import { coloredText } from "../../utils";

const {data} =Astro.props;
const{ title ,subtitle, whyChooseLittileElly} = data[0];
const titleLength = title.split(' ').length;
const subtitleLength = subtitle.split(' ').length;
const colors = ["text-purple","text-blue","text-green-200", "text-orange-200", "text-orange-200"];
const colorForSubTitle = ["text-purple","text-purple","text-purple","text-purple","text-green-200", "text-green-200", "text-green-200","text-green-200", "text-yellow-200", "text-yellow-200", "text-yellow-200", "text-primary", "text-purple" ];
const startingLineOfHeading = title.split(' ').slice(0,titleLength-2).join(' ')
const coloredHeading = title.split(' ').slice(-1)[0];
const finalColorHeading = coloredText(coloredHeading,colors);
const primaryHeading = title.split(' ').slice(-2)[0];
const startingLineOfSubTitle = subtitle.split(' ').slice(0,subtitleLength-2).join(' ')
const coloredSubTitle = subtitle.split(' ').slice(-1)[0];
const finalcolorForSubTitle =  coloredText(coloredSubTitle,colorForSubTitle);
const primarySubTitle = subtitle.split(' ').slice(-2)[0];
// const quote = data.quote.replaceAll('<span>','<span class=\'text-[#EE7F82] font-[700] \'>')

// for content 1
const contentOneImage = whyChooseLittileElly[0].image;
const contentOneimageAlt = whyChooseLittileElly[0].imageAlt;
const contentOnedescription = whyChooseLittileElly[0].description.replaceAll('<span>','<span class=\'text-primary font-bold\'>');

// for content 2
const contentTwoImage = whyChooseLittileElly[1].image;
const contentTwoimageAlt = whyChooseLittileElly[1].imageAlt;
const contentTwodescription = whyChooseLittileElly[1].description.replaceAll('<span>','<span class=\'text-primary font-bold\'>');

---

<Section class="flex flex-col pr-[40px] ] !p-0 max-md:!px-[20px] px-0">
  <div class="flex justify-between items-center">
    <Image src={Rope} alt={"rope"} class={'max-sm:w-20 object-contain'} data-appear data-y={0}></Image>
      <div>

        <Text type="h2" class="text-center">
          <div data-appear>
            {startingLineOfHeading} <br />
            <span class="relative">
              <span class="text-primary">{primaryHeading} </span> <MultiStyleText type="h2"text={coloredHeading} classes={finalColorHeading} />

            </span>
          </div>
        </Text>
        <Text type="regular" class="mt-[10px] !font-[700] !text-3xl max-md:!text-[20px] max-md:leading-[100%]  text-[#1C1C1C] text-center" data-appear={1}>
          <div  class="max-md:leading-[1.5rem]" data-appear={1}>
            {startingLineOfSubTitle} <span class="text-primary">{primarySubTitle}</span>
            <MultiStyleText
            classes={finalcolorForSubTitle}
            text={coloredSubTitle} />
          </div>
        </Text>
      </div>
      <div  data-appear data-y={0}>
        <Image src={Birds} alt={"birds"} class={'relative max-sm:w-20  z-10 object-contain opacity-0 pointer-events-none'}> </Image>
        <Image src={clouds} height={50} alt={"clouds"} class={'absolute right-[20%] top-[-80%] max-sm:w-10  object-contain'}> </Image>
      </div>
  </div>
  <div class="flex gap-[72px]  max-md:gap-[30px] max-md:flex-col items-center relative w-fit justify-center">
    <div class="max-md:order-2 basis-[50%]" data-appear>
      <Text type="base" set:html={contentOnedescription}>

      </Text>
    </div>
    <div class="relative w-[384px] max-md:w-[95%]" data-appear>
      <Image
        class="w-full h-full"
        src={contentOneImage}
        alt={contentOneimageAlt}
        width={700}
        height={700}
      />
    </div>
    </div>
    <div class="flex gap-[72px]  max-md:gap-[30px] max-md:flex-col items-center relative w-fit justify-center" data-appear>
        <div class="relative w-[384px] max-md:w-[95%]">
          <Image
            class="w-full h-full"
            src={contentTwoImage}
            alt={contentTwoimageAlt}
            width={300}
            height={300}
          />
          <Image
            src={gift}
            alt="gift"
            class= "absolute z-[10] w-[70px] max-md:right-[-5%] right-0 bottom-[10%] max-md:bottom-[2%]"
          />
        </div>

      <div class="max-md:order-2 basis-[50%]">
        <div data-appear>
          <Text type="base" set:html={contentTwodescription}>

          </Text>
        </div>
          <!-- <Sal preset="slide-up" d="300" t="400">

          </Sal> -->
      </div>

    </div>

  </div>
</Section>

